                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_guardian_manager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="생활패턴"
                    android:layout_margin="10dp"
                    android:textSize="18dp" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_less_button"
                    android:backgroundTint="@color/green_2"
                    android:layout_marginHorizontal="20dp"
                    >
                    <TextView
                        android:id="@+id/sleeping_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면시간"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <Button
                        android:id="@+id/sleeping_time_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="수정하기\n\n\n"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@android:color/transparent"
                        android:textSize="13dp"
                        />
                    <LinearLayout
                        android:id="@+id/layout_elder_sleeping_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/sleeping_time_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오후"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/elder_start_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/elder_start_minute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오전"
                            android:layout_marginEnd="10dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/elder_end_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/elder_end_minute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="5dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/elder_message_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        app:layout_constraintTop_toBottomOf="@id/layout_elder_sleeping_time"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="70dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
