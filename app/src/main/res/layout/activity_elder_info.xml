                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        app:layout_constraintTop_toBottomOf="@id/elder_message_time"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="70dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/elder_call_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간 소음 없으면 전화 연락"
                        app:layout_constraintTop_toTopOf="@id/elder_call_time"
                        app:layout_constraintStart_toEndOf="@id/elder_call_time"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/elder_sos_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        app:layout_constraintTop_toBottomOf="@id/elder_call_time"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="70dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
