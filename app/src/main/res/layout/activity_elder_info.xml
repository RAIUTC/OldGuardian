                        android:text="수정하기\n\n\n"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@android:color/transparent"
                        android:textSize="13dp"
                        />
                    <LinearLayout
                        android:id="@+id/layout_elder_deg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/deg_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:layout_marginEnd="5dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃  ~ "
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28"
                            android:layout_marginEnd="5dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/window_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="창문열림 시간"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_elder_deg"
                        />
                    <LinearLayout
                        android:id="@+id/layout_elder_window"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/window_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/elder_window_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/elder_window_open_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시간 창문 열림이면 문자 전송"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
