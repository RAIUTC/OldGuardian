<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_8">

    <TextView
        android:id="@+id/correct_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"

        android:layout_marginStart="16dp"
        android:padding="5dp"
        android:text="수정하실 정보를 입력해주세요"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/layout_correct_sleeping_time"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_correct_sleeping_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_less_button"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/sleeping_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수면시간"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/layout_elder_sleeping_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sleeping_time_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/elder_start_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="09"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/elder_start_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후"
                android:layout_marginEnd="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/elder_end_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="07"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/elder_end_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="30"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="5dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_less_button"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_correct_sleeping_time"
        android:layout_marginTop="15dp"
        >

        <EditText
            android:id="@+id/elder_message_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="45dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/elder_message_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 소음 없으면 문자 전송"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/elder_message_time"
            app:layout_constraintStart_toEndOf="@id/elder_message_time"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/elder_call_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="4"
            app:layout_constraintTop_toBottomOf="@id/elder_message_time"
            app:layout_constraintStart_toStartOf="@id/elder_message_time"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/elder_call_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 소음 없으면 전화 연락"
            app:layout_constraintTop_toTopOf="@id/elder_call_time"
            app:layout_constraintStart_toEndOf="@id/elder_call_time"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/elder_sos_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="9"
            app:layout_constraintTop_toBottomOf="@id/elder_call_time"
            app:layout_constraintStart_toStartOf="@id/elder_message_time"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/elder_call_sos_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 소음 없으면 응급 구조"
            app:layout_constraintTop_toTopOf="@id/elder_sos_time"
            app:layout_constraintStart_toEndOf="@id/elder_sos_time"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/green_4"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>