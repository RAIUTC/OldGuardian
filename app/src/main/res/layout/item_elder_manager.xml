<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_elder_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:background="@drawable/round_less_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/elder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김복남"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어르신"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/elder_name"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/elder_delete_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/trashcan"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/black"
            />

<!--        <ImageButton-->
<!--            android:id="@+id/elder_btn"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:src="@drawable/arrow_forward"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:backgroundTint="@android:color/transparent"-->
<!--            android:background="@drawable/round_button"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>